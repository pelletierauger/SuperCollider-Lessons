{SinOsc.ar(440) * 0.1 ! 2}.play;

{SinOsc.ar(440 ! 2) * 0.1}.play;

// 440 ! 2 ---> [440, 440]

{SinOsc.ar([440, 440]) * 0.1}.play;

{SinOsc.ar([440, 441]) * 0.1}.play;

{SinOsc.ar(440 * [1, 1.01]) * 0.1}.play;

(
{
    var lfo = SinOsc.kr([6, 6.1]).unipolar * 10;
    var sig = LFTri.ar(440 + lfo) * 0.1;
    sig;
}.play;
)


